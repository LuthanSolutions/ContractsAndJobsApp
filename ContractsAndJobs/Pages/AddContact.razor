@page "/addcontact"
@using ContractsAndJobs.Models

<div class="container">
    <div class="row">
        <div class="col">
            <SfTextBox ID="firstName" Placeholder="First Name" FloatLabelType="FloatLabelType.Always" @bind-Value="@this.ViewModel!.SelectedContact!.FirstName"></SfTextBox>
            <SfTextBox ID="lastName" Placeholder="Last Name" FloatLabelType="FloatLabelType.Always" @bind-Value="@this.ViewModel!.SelectedContact!.LastName"></SfTextBox>
            <SfTextBox ID="agency" Placeholder="Agency" FloatLabelType="FloatLabelType.Always" @bind-Value="@this.ViewModel!.SelectedContact!.Agency"></SfTextBox>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col d-flex justify-content-center">
            <div class="m-2"><SfButton>Add</SfButton></div>
            <div class="m-2"><SfButton>Save</SfButton></div>
            <div class="m-2"><SfButton>Delete</SfButton></div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col">
            @if (this.ViewModel?.Contacts != null)
            {
                <SfGrid DataSource="@this.ViewModel.Contacts">
                    <GridEvents TValue="Contact" RowSelected="this.ContactRowSelectHandler"></GridEvents>
                    <GridColumns>
                        <GridColumn Field="FirstName" HeaderText="First Name"></GridColumn>
                        <GridColumn Field="LastName" HeaderText="Last Name"></GridColumn>
                        <GridColumn Field="Agency" HeaderText="Agency"></GridColumn>
                    </GridColumns>
                </SfGrid>
            }
        </div>
    </div>
</div>

<style>
    .e-btn {
        width: 5rem;
    }
</style>
